<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#424949"> <!-- Fondo de imagen como en las pantallas anteriores -->

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tv_setup_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Configuración completada!"
        android:textSize="24sp"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <!-- Mensaje de confirmación -->
    <TextView
        android:id="@+id/tv_setup_complete_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La aplicación está lista para usar con la configuración y el idioma seleccionados."
        android:textSize="16sp"
        android:textColor="#FFC107"
        android:layout_below="@id/tv_setup_complete_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <!-- Información del idioma seleccionado -->
    <TextView
        android:id="@+id/tv_selected_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idioma seleccionado: Español"
        android:textSize="18sp"
        android:textColor="#FFC107"
        android:layout_below="@id/tv_setup_complete_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <!-- Botón para habilitar la traducción de texto -->
    <Button
        android:id="@+id/btn_enable_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitar Traducción de Texto"
        android:layout_below="@id/tv_selected_language"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:backgroundTint="#0099ff" 
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <!-- Botón para abrir WhatsApp (actualizado) -->
    <Button
        android:id="@+id/btn_open_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir WhatsApp"
        android:layout_below="@id/btn_enable_translation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:backgroundTint="#0099ff"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>

    <!-- Nota adicional -->
    <TextView
        android:id="@+id/tv_additional_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahora puedes usar WhatsApp con la traducción automática activada."
        android:textSize="14sp"
        android:textColor="#FFC107"
        android:layout_below="@id/btn_open_whatsapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>
</RelativeLayout>
